<div class="lesson" data-stt="{{lesson_stt}}">
    <div class="lesson-name">
        <div class="form-group">
            <label class="control-label">Bài <span class="lesson_stt">{{lesson_stt}}</span></label>
            <input type="text" name="lesson{{chap_stt}}_{{lesson_stt}}" class="form-control ip" placeholder="Nhập tên bài học">
        </div>
        <a name="remove" class="btn-remove-lesson btn btn-primary" href="#" role="button"><i class="fa fa-times"></i></a>
    </div>
    <div class="upload-video">
        <div class="file-loading">
         <input class="input-video" name="{{chap_stt}}_{{lesson_stt}}" type="file" accept="video/*">
        </div>
    </div>
    <div class="form-group w-100">
        <div class="alert alert-warning" role="alert" style="display: none;">
            <strong>#</strong>
        </div>
        <label class="control-label">Thêm nội dung bài học</label>
        <textarea class="txt_description" id="{{chap_stt}}_{{lesson_stt}}"></textarea>
    </div>

</div>
