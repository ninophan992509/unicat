<!-- Popular Courses -->

<div class="courses">
    <div class="section_background parallax-window" data-parallax="scroll"
        data-image-src="assets/images/courses_background.jpg" data-speed="0.8"></div>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section_title_container text-center">
                    <h2 class="section_title">Các khóa học phổ biến</h2>
                </div>
            </div>
        </div>

       
        <div class="row courses_row">
            <!-- Course -->
            {{#if this.courses}}
            {{#each this.courses}}
            <div class="col-lg-4 course_col">
                <div class="course">
                    <div class="course_image"><img src="images/courses/{{image}}" alt="Course Image"></div>
                    <div class="course_body">
                        <h3 class="course_title"><a href="course.html">{{name}}</a></h3>
                        <div class="course_avatar_teacher">
                            <div class="course_avatar"><img src="images/teachers/{{id}}" class="img-fluid rounded-circle" alt="Avatar Teacher"></div>
                            <div class="course_teacher">{{id}}</div>
                        </div>
                        <div class="course_text">
                            <p>{{review}}</p>
                        </div>
                    </div>
                    <div class="course_footer">
                        <div class="course_footer_content d-flex flex-row align-items-center justify-content-start">
                            <div class="course_info">
                                <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                                <span>20 Student</span>
                            </div>
                            <div class="course_info">
                                <div class="star_outer">
                                    <div class="star_inner"></div>
                                </div>
                                <span class="course_rating" >4.7</span>
                                <span class="course_count_rating">(129)</span>
                            </div>
                            <div class="course_price ml-auto">{{price}}</div>
                        </div>
                        <div class="course_button d-flex justify-content-between">
                            <a name="btnAddCard"  class="btn btn-primary" href="javascipt:;" role="button">
                                 <i class="fas fa-cart-plus"></i>
                                 Thêm Vào Giỏ Hàng
                            </a>
                            <a name="btnDetail"  class="btn btn-outline-primary" href="javascipt:;" role="button">
                                Xem Chi Tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
             {{/each}}
             {{/if}}
        </div>
       
        <div class="row">
            <div class="col">
                <div class="courses_button trans_200"><a href="#">view all courses</a></div>
            </div>
        </div>
    </div>
</div>

<!-- Counter -->

<div class="counter">
    <div class="counter_background" style="background-image:url(assets/images/counter_background.jpg)"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="counter_content">
                    <h2 class="counter_title">Đăng ký ngay</h2>
                    <div class="counter_text">
                        <p>Học online với hơn 1000+ khóa học từ các Giảng viên, Chuyên gia hàng đầu. Học bất cứ lúc nào,
                            bất cứ nơi đâu.</p>
                    </div>

                    <!-- Milestones -->

                    <div class="milestones d-flex flex-md-row flex-column align-items-center justify-content-between">

                        <!-- Milestone -->
                        <div class="milestone">
                            <div class="milestone_counter" data-end-value="10">0</div>
                            <div class="milestone_text">năm</div>
                        </div>

                        <!-- Milestone -->
                        <div class="milestone">
                            <div class="milestone_counter" data-end-value="500" data-sign-after="k">0</div>
                            <div class="milestone_text">học viên</div>
                        </div>

                        <!-- Milestone -->
                        <div class="milestone">
                            <div class="milestone_counter" data-end-value="3000" data-sign-after="+">0</div>
                            <div class="milestone_text">khóa học</div>
                        </div>

                        <!-- Milestone -->
                        <div class="milestone">
                            <div class="milestone_counter" data-end-value="1000">0</div>
                            <div class="milestone_text">giảng viên</div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

        <div class="counter_form">
            <div class="row fill_height">
                <div class="col fill_height">
                    <form class="counter_form_content d-flex flex-column align-items-center justify-content-center"
                        action="#">
                        <div class="counter_form_title">Đăng Ký</div>
                        <input type="text" class="counter_input" placeholder="Họ:" required="required">
                        <input type="text" class="counter_input" placeholder="Tên:" required="required">
                        <input type="tel" class="counter_input" placeholder="Số điện thoại:" required="required">
                        <input type="tel" class="counter_input" placeholder="Email:" required="required">
                        <input type="password" class="counter_input" placeholder="Mật khẩu:" required="required">
                        <button type="submit" class="counter_form_button">Đăng ký</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

