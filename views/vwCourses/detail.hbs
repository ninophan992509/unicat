<!-- Home -->
<div class="home">
	<div class="breadcrumbs_container">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="breadcrumbs">
						<ul>
							<li><a href="/">Trang chủ</a></li>
							<li><a href="/courses">Các khóa học</a></li>
							<li>Chi tiết khóa học</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
