				<!-- Course Sidebar -->
				<div class="col-lg-4">
					<div class="sidebar">

						<!-- Feature -->
						<div class="sidebar_section">
							<div class="sidebar_section_title">Thanh toán khóa học</div>
							<div class="sidebar_feature course_checkout_card">
								<!-- Course Image -->
								<div class="course_image_small">
									<img src="/images/courses/{{course.CourImgSm}}" alt="Hình ảnh khóa học">
								</div>
								<!-- Course Price -->
								<div class="d-flex justify-content-between align-items-center">
									<div class="course_price">{{format course.CourPrice}}đ</div>
									<a href="#" class="course_fav_btn"><i class="fa fa-heart"></i></a>
								</div>



								<div class="course_checkout">
									<button type="submit" class="btn btn-primary buy_now" title="Buy Now" id="buy-now"
