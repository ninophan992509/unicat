{{#section 'js'}}
    <script>
        $(document).ready(function () {
            $('.btn-lock').on('click', function (e) {
                e.preventDefault();
                const id = $(this).parents(".table-data-lock").data("id");
                const status = $(this).parents(".table-data-lock").data("st");
                $('#txt_acc').val(id);
                $('#txt_st').val(status);
                $('#frmLock').submit();
            });

            $("#btnAddTeacher").click(function () {
                window.location.href = "/admin/manage-teachers/new-teacher";
            });
        });
    </script>
{{/section}}
<!-- DATA TABLE-->
<form action="/admin/lock-account" id="frmLock" method="post">
    <input type="hidden" name="account" id="txt_acc">
    <input type="hidden" name="status" id="txt_st">
</form>
<section class="p-t-20">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="title-5 m-b-35">Danh sách khóa học</h3>
                <div class="table-data__tool">
                    <div class="table-data__tool-left">
                        <div class="rs-select2--light rs-select2--md">
                            <select class="js-select2" name="property" id="slCat">
                                <option selected="selected">Loại danh mục</option>
                                <option value="0">Danh mục</a></option>
                                <option value="1">Danh mục con</a></option>
                            </select>
                            <div class="dropDownSelect2"></div>
                        </div>
                        <div class="rs-select2--light rs-select2--md">
                            <select class="js-select2" name="time">
                                <option selected="selected">Giảng viên</option>
                                {{#each teachers}}
                                    <option value="{{TeachID}}">{{TeachName}}</option>
                                {{/each}}

                            </select>
                            <div class="dropDownSelect2"></div>
                        </div>
                        <button class="au-btn-filter">
                            <i class="zmdi zmdi-filter-list"></i>filters</button>
                    </div>
                    <div class="table-data__tool-right">
                        <button id="btnAddTeacher" class="au-btn au-btn-icon au-btn--green au-btn--small">
                            <i class="zmdi zmdi-plus"></i>Thêm giảng viên</button>
                    </div>
                </div>
                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>
                            <tr>
                                <th>
                                    <label class="au-checkbox">
                                        <input type="checkbox">
                                        <span class="au-checkmark"></span>
                                    </label>
                                </th>
                                <th>Avatar</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Email liên lạc</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>Tài khoản</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each teachers}}

                                <tr class="tr-shadow">
                                    <td>
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <img src="/images/{{#if TeachAvatar}}teachers/{{TeachAvatar}}{{else}}no-avatar.png{{/if}}"
                                            alt="{{TeachName}}" style="width:70px;height:70px;">
                                    </td>
                                    <td>{{TeachName}}</td>
                                    <td>
                                        <span class="block-email">{{Email}}</span>
                                    </td>
                                    <td>
                                        {{Phone}}
                                    </td>
                                    <td>
                                        <span class="block-email">{{SubEmail}}</span>
                                    </td>
                                    <td>
                                        {{#if DateOfBirth}}{{formatDOB DateOfBirth}}{{/if}}
                                    </td>
                                    <td>
                                        <span class="status--process">{{#eq Gender 0}}Nam{{/eq}}
                                                {{#eq Gender 1}}Nữ{{/eq}}
                                                    {{#eq Gender 2}}Khác{{/eq}}
                                        </span>
                                    </td>
                                    <td class="table-data-lock" data-id="{{AccID}}" data-st="{{isLock}}">
                                        <button class="item btn-lock" data-toggle="tooltip" data-placement="top"
                                            title="Lock">
                                            {{#eq isLock 0}}
                                                <span class="status--process"><i class="zmdi zmdi-lock-open"></i></span>
                                            {{/eq}}
                                            {{#eq isLock 1}}
                                                <span class="status--denied"><i
                                                        class="zmdi zmdi-lock-outline"></i></span>
                                            {{/eq}}
                                        </button>
                                    </td>

                                    <td>
                                        <div class="table-data-feature">

                                            <button class="item" data-toggle="tooltip" data-placement="top"
                                                title="Edit">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top"
                                                title="Delete">
                                                <i class="zmdi zmdi-delete"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top"
                                                title="More">
                                                <i class="zmdi zmdi-more"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="spacer"></tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END DATA TABLE-->
