{{#section 'js'}}
    <script>
        $(document).ready(function () {
            $('.btn-lock').on('click', function (e) {
                e.preventDefault();
                const id = $(this).parents(".table-data-lock").data("id");
                const status = $(this).parents(".table-data-lock").data("st");
                $('#txt_acc').val(id);
                $('#txt_st').val(status);
                $('#frmLock').submit();
            });
        });
    </script>
{{/section}}
<!-- END DATA TABLE-->
<!-- DATA TABLE-->
<form action="/admin/lock-account" id="frmLock" method="post">
    <input type="hidden" name="account" id="txt_acc">
    <input type="hidden" name="status" id="txt_st">
</form>
<section class="p-t-20">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="title-5 m-b-35">Danh sách khóa học</h3>
                <div class="table-data__tool">
                </div>
                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>
                            <tr>
                                <th>
                                    <label class="au-checkbox">
                                        <input type="checkbox">
                                        <span class="au-checkmark"></span>
                                    </label>
                                </th>
                                <th>Avatar</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Đã kích hoạt</th>
                                <th>Tài khoản</th>
                            </tr>
                        </thead>
                        <tbody>

                            {{#each students}}
                                <tr class="tr-shadow">
                                    <td>
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <img src="/images/{{#if StdAvatar}}students/{{StdAvatar}}{{else}}no-avatar.png{{/if}}"
                                            alt="{{StName}}" style="width:70px;height:70px;">
                                    </td>
                                    <td>{{StdName}}</td>
                                    <td>
                                        <span class="block-email">{{Email}}</span>
                                    </td>
                                    <td>
                                        <span class="status--process">{{#if ActiveCode}}Chưa kích hoạt{{else}}Đã kích
                                                hoạt{{/if}}</span>
                                    </td>
                                    <td class="table-data-lock" data-id="{{AccID}}" data-st="{{isLock}}">

                                        <button class="item btn-lock" data-toggle="tooltip" data-placement="top"
                                            title="Lock">
                                            {{#eq isLock 0}}
                                                <span class="status--process"><i class="zmdi zmdi-lock-open"></i></span>
                                            {{/eq}}
                                            {{#eq isLock 1}}
                                                <span class="status--denied"><i
                                                        class="zmdi zmdi-lock-outline"></i></span>
                                            {{/eq}}
                                        </button>
                                    </td>

                                    <td >
                                        <div class="table-data-feature" >

                                            <button class="item" data-toggle="tooltip" data-placement="top"
                                                title="Edit">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top"
                                                title="Delete">
                                                <i class="zmdi zmdi-delete"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top"
                                                title="More">
                                                <i class="zmdi zmdi-more"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="spacer"></tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END DATA TABLE-->
